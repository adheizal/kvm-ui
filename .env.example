# Application
NODE_ENV=development
PORT=3000

# SSH Configuration (Target QEMU KVM Host)
SSH_HOST=<IP_QEMU_KVM>
SSH_USER=root

# JWT Configuration
JWT_SECRET=change-this-secret-in-production-use-strong-random-string
JWT_EXPIRES_IN=24h

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=internal_db
DB_USER=internal_users
DB_PASSWORD=your-secure-password-here
DB_SSL=false

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_USER=
REDIS_PASSWORD=
REDIS_TLS=false
REDIS_CA=
REDIS_REJECT_UNAUTHORIZED=false

# Monitoring (Optional)
HYPERDX_API_KEY=
LOGTAIL_TOKEN=

# VM Configuration
TEMPLATE_IP=

# CORS
CORS_ORIGIN=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
